<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/welcome_screen_backround"
                android:orientation="vertical">

    <TextView
        android:id="@+id/byebye"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:text="Vielen Dank fÃ¼r deine Bestellung!"
        android:textSize="50dp"
        android:textColor="@color/grey"
        android:layout_marginTop="50dp"
        android:layout_gravity="top|center_horizontal"
        android:gravity="center_horizontal"/>

    <ImageView
        android:id="@+id/byeAvatar"
        android:layout_width="362dp"
        android:layout_height="0dip"
        android:layout_weight="9"
        android:src="@drawable/happy_avatar"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"/>

    <ImageButton
        android:id="@+id/McD"
        android:layout_width="120dip"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:src="@drawable/mcdonalds_golden_arches"
        android:layout_gravity="bottom|end"
        android:background="@android:color/transparent"
        android:scaleType="fitCenter"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/feedback_area_tabletContainer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkgreen"
    android:orientation="vertical">

    <!--android:background="@drawable/background_feedback_area_tablet"-->
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="8"
        android:layout_gravity="center"
        android:padding="5dp"
        android:shrinkColumns="*"
        android:stretchColumns="*">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:paddingTop="3dp">

            <ImageButton
                android:id="@+id/button"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/mcdonalds_golden_arches"
                android:text="New Button" />

            <ImageButton
                android:id="@+id/button2"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:layout_marginLeft="3dp"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/mcdonalds_golden_arches"
                android:text="New Button" />

            <ImageButton
                android:id="@+id/button3"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/mcdonalds_golden_arches"
                android:text="New Button" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:gravity="center"
            android:padding="3dp">

            <ImageButton
                android:id="@+id/button4"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/mcdonalds_golden_arches"
                android:text="New Button" />

            <ImageButton
                android:id="@+id/button5"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:layout_marginLeft="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/mcdonalds_golden_arches"
                android:text="New Button" />

            <ImageButton
                android:id="@+id/button6"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_weight="1"
                android:visibility="gone"
                android:adjustViewBounds="true"
                android:background="@color/white"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"
                android:scaleType="centerInside"
                android:src="@drawable/mcdonalds_golden_arches"
                android:text="New Button" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/gesamtpreis"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="Gesamtpreis: 0.00â‚¬"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:id="@+id/bezahlen"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:text="Bezahlen"
            android:textAllCaps="false" />

    </LinearLayout>


</LinearLayout>
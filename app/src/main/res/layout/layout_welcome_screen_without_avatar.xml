<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/welcome_screen_backround"
              android:orientation="vertical">

    <TextView
        android:id="@+id/hello"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="Guten Tag!"
        android:textSize="50dp"
        android:layout_marginTop="50dp"
        android:textColor="@color/grey"/>

    <TextView
        android:id="@+id/whatToDo"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:gravity="center_horizontal"
        android:text="@string/welcomeTXT2"
        android:textSize="40dp"
        android:textColor="@color/grey"/>

    <LinearLayout
        android:id="@+id/kcal_Abfrage"
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true">

        <EditText
            android:layout_width="100sp"
            android:layout_height="wrap_content"
            android:id="@+id/txtKcal"
            android:text="600"
            android:textSize="40sp"
            android:inputType="number"
            android:textColor="@color/grey"
            android:background="@android:color/transparent"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="kcal"
            android:textSize="40dp"
            android:textColor="@color/grey"/>

        <ImageButton
            android:id="@+id/infobtn_without_avatar"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="20dp"
            android:gravity="center_horizontal"
            android:src="@drawable/rsz_noun_91723_cc"
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"/>


    </LinearLayout>

    <Button
        android:id="@+id/bestellungStarten"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="Bestellung starten"
        android:layout_above="@+id/imageView"/>


    <ImageView
        android:layout_width="85dip"
        android:layout_height="0dip"
        android:layout_weight="2"
        android:src="@drawable/mcdonalds_golden_arches"
        android:layout_gravity="bottom|right"
        android:id="@+id/imageView"
        />


</LinearLayout>